- title t('.title')
= render 'nav'

- unless @unaccepted_tasks.empty?
  %section
    %h3= t '.title_open'
    = render 'list', tasks: @unaccepted_tasksm, q: @unaccepted_tasks_q

%section
  %h3= t '.title_accepted'
  - unless @accepted_tasks.empty?
    = render 'list', tasks: @accepted_tasks, q: @accepted_tasks_q
  - else
    = t('.more', tasks_link: link_to(t('.tasks_link'), tasks_path)).html_safe
  %br/
  = link_to_top

